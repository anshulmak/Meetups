<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/description"
                android:fontFamily="casual"
                android:text="Mobile Android App development is all about making interactive APP for the User which are benefecial to them."
                android:textColor="#FF37474F"
                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clock_circular_outline"
                android:layout_below="@+id/description"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:id="@+id/time_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9th June,2018"
                android:layout_below="@id/description"
                android:layout_toEndOf="@id/time_icon"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/information_date"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/information_date"
                android:layout_toEndOf="@id/time_icon"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:layout_marginTop="5dp"
                android:id="@+id/information_timefrom"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="7:00 pm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:fontFamily="casual"
                android:layout_toEndOf="@id/information_timefrom"
                android:layout_below="@id/information_date"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="7:00 pm"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:id="@+id/information_timetill"
                android:layout_toEndOf="@id/information_timefrom"
                android:layout_below="@id/information_date"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loction_icon"
                android:src="@drawable/placeholder_filled_point"
                android:layout_below="@id/information_timetill"
                android:layout_marginTop="45dp"
                android:paddingBottom="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/loction_icon"
                android:text="Mokriya Madhapur"
                android:layout_below="@id/information_timetill"
                android:layout_marginTop="45dp"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:id="@+id/location"
                android:layout_marginStart="15dp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                android:layout_below="@id/loction_icon"
                android:layout_marginTop="45dp"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/speaker_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/speaker_icon"
                android:text="Hosted By "
                android:fontFamily="casual"
                android:layout_below="@id/loction_icon"
                android:layout_marginTop="45dp"
                android:textSize="18sp"
                android:id="@+id/hosted"
                android:textColor="#000000"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/hosted"
                android:text="Amrut Makdani"
                android:id="@+id/host_name"
                android:layout_below="@id/loction_icon"
                android:layout_marginTop="45dp"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/speaker_icon"
                android:layout_below="@id/hosted"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/occupation"
                android:text="Android App Developer"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/key"
                android:layout_below="@id/occupation"
                android:layout_marginTop="45dp"
                android:layout_marginStart="10dp"
                android:id="@+id/key_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/occupation"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@id/key_icon"
                android:layout_marginStart="15dp"
                android:text="ABCD"
                android:fontFamily="casual"
                android:id="@+id/information_key"
                android:textColor="#000000"
                android:textSize="18sp"/>


        </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>
</androidx.core.widget.NestedScrollView>